{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"introspectComments": true
				}
			},
			{
				"name": "@nestjs/graphql",
				"options": {
					"typeFileNameSuffix": [
						".input.ts",
						".dto.ts",
						".entity.ts",
						".args.ts"
					],
					"introspectComments": true
				}
			}
		]
	}
}
